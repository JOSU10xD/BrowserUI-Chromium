<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrowserUI.Styles">
    
    <!--Tab header Templates-->
    <DataTemplate x:Key="TabHeaderTemplate">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image Source="{Binding TabHeaderFavicon}"  HorizontalAlignment="Left" VerticalAlignment="Center"
                   Width="20" Height="20"/>
            <TextBlock Text="{Binding TabHeaderTitle}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
        </StackPanel>
    </DataTemplate>
    
    
    
    <DataTemplate x:Key="SmallHistoryDataTemplate">
        <Grid MaxHeight="28" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="28"/>
            </Grid.ColumnDefinitions>
            <Image Width="20" Source="Assets/gridwall.png" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="This is History item" Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0"/>
            <FontIcon Width="20" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Glyph="&#xE76C;" FontSize="10"/>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>